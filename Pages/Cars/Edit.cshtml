@page
@model SparkAuto.Pages.Cars.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<header class="page-header bg-primary pb-10">
    <div class="container py-4">
        <div class="row">
            <div class="col-8">
                <a asp-page="/Index" class="btn btn-icon btn-sm btn-outline-white mb-2"><i class="fal fa-arrow-left"></i></a>
                <h2 class="text-white">Edit Car</h2>
            </div>
        </div>
    </div>
</header>

<div class="container mt-n10">
    <div class="card p-5">
        <form method="post">
            <div>
                <input type="hidden" asp-for="Car.Id" />
                <input type="hidden" asp-for="Car.UserId" />
                <div class="form-group row">
                    <div class="col-12 col-md-2">
                        <label asp-for="Car.VIN"></label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="Car.VIN" class="form-control" />
                    </div>
                    <span asp-validation-for="Car.VIN" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-12 col-md-2">
                        <label asp-for="Car.Make"></label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="Car.Make" class="form-control" />
                    </div>
                    <span asp-validation-for="Car.Make" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-12 col-md-2">
                        <label asp-for="Car.Model"></label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="Car.Model" class="form-control" />
                    </div>
                    <span asp-validation-for="Car.Model" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-12 col-md-2">
                        <label asp-for="Car.Style"></label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="Car.Style" class="form-control" />
                    </div>
                    <span asp-validation-for="Car.Style" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-12 col-md-2">
                        <label asp-for="Car.Year"></label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="Car.Year" class="form-control" />
                    </div>
                    <span asp-validation-for="Car.Year" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-12 col-md-2">
                        <label asp-for="Car.Miles"></label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="Car.Miles" class="form-control" />
                    </div>
                    <span asp-validation-for="Car.Miles" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-12 col-md-2">
                        <label asp-for="Car.Color"></label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="Car.Color" class="form-control" />
                    </div>
                    <span asp-validation-for="Car.Color" class="text-danger"></span>
                </div>
                 <div class="form-group row">
                    <div class="col-12 col-md-2">
                        <label asp-for="Car.Description"></label>
                    </div>
                    <div class="col-12 col-md-6">
                        <textarea class="form-control" cols="30" rows="5" asp-for="Car.Description"></textarea>
                    </div>
                    <span asp-validation-for="Car.Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-12 offset-md-2">
                        <partial name="_EditAndBackToListButton" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
