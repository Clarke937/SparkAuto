@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item mr-2">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>

        <li class="nav-item mr-2">
            <a class="btn btn-transparent-light" asp-area="Identity" asp-page="/Account/Register"><i class="far fa-user-edit mr-2"></i><span class="">Register</span></a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn  btn-transparent-light"><i class="fas fa-sign-in mr-2"></i> <span class="">Login</span></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-transparent-light" asp-area="Identity" asp-page="/Account/Login">
                <i class="fal fa-sign-in mr-2"></i> <span>Login</span>
            </a>
        </li>
    }
</ul>
