@page
@model RegisterModel
@using SparkAuto.Utility
@{
    ViewData["Title"] = "Register";
}


<div class="container mt-4">
    <div class="card p-5">
        <h2>Create New Account</h2>
        <hr>

        <div class="row">
            <div class="col-12 col-md-7 order-2 order-md-1">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <label asp-for="Input.Name"></label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input asp-for="Input.Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <label asp-for="Input.Email"></label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input asp-for="Input.Email" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <label asp-for="Input.PhoneNumber"></label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <label asp-for="Input.Address"></label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input asp-for="Input.Address" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <label asp-for="Input.City"></label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input asp-for="Input.City" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <label asp-for="Input.PostalCode"></label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input asp-for="Input.PostalCode" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <label asp-for="Input.Password"></label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input asp-for="Input.Password" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <label asp-for="Input.ConfirmPassword"></label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>



                    @if (User.IsInRole(SD.AdminEndUser))
                    {
                        <div class="form-group">
                            <div class="row">
                                <div class="offset-4 col-12">
                                    <div class="custom-control custom-checkbox">
                                        <input asp-for="Input.IsAdmin" class="custom-control-input" type="checkbox" id="customCheck1" /> 
                                        <label class="custom-control-label" for="customCheck1" asp-for="Input.IsAdmin"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <button type="submit" class="btn btn-success rounded-pill px-5">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-12 col-md-5 align-self-center order-1 order-md-2">
                <img src="~/images/undraw/register.png" alt="" class="img-fluid">
            </div>
        </div>

        
        

    </div> 
</div>







@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
